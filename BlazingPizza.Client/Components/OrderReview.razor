<div class="order-review">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>المنتج</th>
                <th>الكمية</th>
                <th>سعر الوحدة</th>
                <th>الإجمالي</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Order.Cards)
            {
                <tr>
                    <td>@card.ProductName</td>
                    <td>@card.Quantity</td>
                    <td>@($"{card.UnitPrice:0.00} ₪")</td>
                    <td>@($"{card.TotalPrice:0.00} ₪")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" style="text-align:left"><strong>المجموع الكلي:</strong></td>
                <td><strong>@($"{Order.TotalPrice:0.00} ₪")</strong></td>
            </tr>
        </tfoot>
    </table>
</div>

@code {
	[Parameter, EditorRequired] public Order Order { get; set; } = new();
}