@page "/admin/refillcards/index"
@using BlazingPizza.Shared
@using BlazingPizza
@using Microsoft.AspNetCore.Authorization
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Authorize(Roles = "Admin")]
@layout BlazingPizza.Components.Layout.AdminLayout
@rendermode InteractiveServer

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">بطاقات الشحن</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/admin/dashboard">الرئيسية</a></li>
                    <li class="breadcrumb-item active">بطاقات الشحن</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">قائمة بطاقات الشحن</h3>
                        <div class="card-tools">
                            <a href="/admin/refillcards/create" class="btn btn-primary">
                                <i class="bi bi-plus"></i> اضافة بطاقة شحن جديدة
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (refillCards == null)
                        {
                            <div class="text-center">
                                <div class="spinner-border" role="status">
                                    <span class="visually-hidden">جاري التحميل...</span>
                                </div>
                            </div>
                        }
                        else if (!refillCards.Any())
                        {
                            <div class="alert alert-info text-center">
                                لا توجد بطاقات شحن مسجلة
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>اسم المنتج</th>
                                            <th>قيمة البطاقة</th>
                                            <th>الشركة</th>
                                            <th>السعر</th>
                                            <th>الحالة</th>
                                            <th>الإجراءات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var card in refillCards)
                                        {
                                            <tr>
                                                <td>@card.id</td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        @if (!string.IsNullOrEmpty(card.imageName))
                                                        {
                                                            <img src="/img/refillcard/@card.imageName" alt="@card.ProductName" 
                                                                 class="img-circle mr-2" style="width: 40px; height: 40px; object-fit: cover;">
                                                        }
                                                        <span>@card.ProductName</span>
                                                    </div>
                                                </td>
                                                <td>@card.CardAmount ₪</td>
                                                <td>@GetCarrierName(card.CarrierID)</td>
                                                <td>@card.price ₪</td>
                                                <td>
                                                    @if (card.isActive)
                                                    {
                                                        <span class="badge badge-success">نشط</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">غير نشط</span>
                                                    }
                                                    @if (card.isTemp)
                                                    {
                                                        <span class="badge badge-warning">مؤقت</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/refillcards/edit/@card.id" class="btn btn-sm btn-info">
                                                            <i class="bi bi-pencil"></i> تعديل
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-danger" @onclick="() => DeleteRefillCard(card.id)">
                                                            <i class="bi bi-trash"></i> حذف
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<RefillCard> refillCards = new();
    private List<Carrier> carriers = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadRefillCards();
        await LoadCarriers();
    }

    private async Task LoadRefillCards()
    {
        try
        {
            refillCards = await Http.GetFromJsonAsync<List<RefillCard>>("api/refillcard") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading refill cards: {ex.Message}");
        }
    }

    private async Task LoadCarriers()
    {
        try
        {
            carriers = await Http.GetFromJsonAsync<List<Carrier>>("api/carriers") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading carriers: {ex.Message}");
        }
    }

    private string GetCarrierName(int carrierId)
    {
        var carrier = carriers.FirstOrDefault(c => c.id == carrierId);
        return carrier?.carrierName ?? "غير معروف";
    }

    private async Task DeleteRefillCard(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "هل أنت متأكد من حذف بطاقة الشحن هذه؟"))
        {
            try
            {
                var response = await Http.DeleteAsync($"api/refillcard/{id}");
                if (response.IsSuccessStatusCode)
                {
                    await LoadRefillCards();
                    await JSRuntime.InvokeVoidAsync("alert", "تم حذف بطاقة الشحن بنجاح");
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "حدث خطأ أثناء حذف بطاقة الشحن");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error deleting refill card: {ex.Message}");
                await JSRuntime.InvokeVoidAsync("alert", "حدث خطأ أثناء حذف بطاقة الشحن");
            }
        }
    }
} 